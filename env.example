# ===========================================
# Mehnat Kodeksi API - Environment Configuration
# ===========================================
# Copy this file to .env and configure for your environment

# ----- Application Settings -----
APP_NAME="Mehnat Kodeksi API"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com

# ----- Logging -----
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ----- Database (PostgreSQL for Render) -----
# Option 1: Use DATABASE_URL (recommended for Render)
DATABASE_URL=

# Option 2: Individual settings
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=mehnat_kodeksi
DB_USERNAME=mehnat_user
DB_PASSWORD=

# ----- Cache, Queue, Session -----
# For Render free tier (no Redis), use file/sync drivers
CACHE_STORE=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120
BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

# ----- Redis (optional, for paid plans) -----
# CACHE_STORE=redis
# QUEUE_CONNECTION=redis
# SESSION_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# ----- Mail -----
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@mehnat-kodeksi.uz"
MAIL_FROM_NAME="${APP_NAME}"

# ----- Security -----
FORCE_HTTPS=true
BCRYPT_ROUNDS=12

# ----- Sanctum (API Authentication) -----
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,your-frontend-domain.vercel.app
SESSION_DOMAIN=.onrender.com

# ----- Rate Limiting -----
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# ----- 2FA -----
GOOGLE_2FA_ISSUER="Mehnat Kodeksi"

# ----- Localization -----
APP_LOCALE=uz
APP_FALLBACK_LOCALE=uz
APP_AVAILABLE_LOCALES=uz,ru,en

# ----- Render Specific -----
# Set to "true" for first deploy to seed database
SEED_DATABASE=true
